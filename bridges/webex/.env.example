# WebEx Configuration (Required)
WEBEX_PERSONAL_TOKEN=your_webex_personal_token_here

# Room Filtering Configuration (Optional - Hybrid Approach)
# Tier 1: Priority Rooms (Always Monitored)
WEBEX_PRIORITY_ROOMS=SRE Alerts,Platform Team,Critical Issues

# Tier 2: Pattern-Based Discovery  
WEBEX_INCLUDE_PATTERNS=*Alert*,*Critical*,*Incident*,*Emergency*,*P1*,*Sev1*
WEBEX_EXCLUDE_PATTERNS=*Social*,*Random*,*Fun*,*Coffee*,*Lunch*,*Birthday*

# Tier 3: Activity-Based Intelligence
WEBEX_MIN_ACTIVITY_MESSAGES=5
WEBEX_MIN_ACTIVITY_DAYS=7
WEBEX_SKIP_DIRECT_MESSAGES=true

# Tier 4: Performance Limits
WEBEX_MAX_MONITORED_ROOMS=25
WEBEX_CACHE_ROOM_LIST_MINUTES=30

# Urgency Detection Settings (Optional)
URGENCY_KEYWORDS=urgent,ASAP,critical,production,down,incident,emergency
HIGH_PRIORITY_SENDERS=manager@company.com,oncall@company.com

# Logging
LOG_LEVEL=info